<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Zoologico</title>
  <link href="/static/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/static/css/toastr.css">
  <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  <script src="/static/bootstrap.bundle.min.js"></script>
  <script src="/static/js/toastr.min.js"></script>
  
</head>
<body class="bg-light">
    <!-- Navbar con Bootstrap -->
  <nav class="navbar navbar-light text-white pb-0" style="background-color: #479467;">
    <div class="container-fluid pb-0">
      <a class="navbar-brand" href="">
        <img src="/static/img/panda.png" alt="" width=80" height="55" class="d-inline align-baseline">
      </a>
      <h1 id="Boots" class="d-inline-block align-top align-middle fs-2 fw-light fw-bolder fst-italic text-end">The virtual zoo...</h1>
    </div>
  </nav>

  <div class="container">
    <div class="row">

      <div class="col col-5">
        <!-- Formulario Login con Bootstrap-->
        <form id="form-login" action="/login" method="POST"class="px-4 py-3">
          
          <h4>Ingresa a la plataforma</h4>
          <div class="mb-3">
            <label for="emaillog" class="form-label">Email</label>
            <input type="email" class="form-control" id="emaillog" name="email" placeholder="email@example.com" required>
          </div>
          
          <div class="mb-3">
            <label for="post" name="elogueado" class="form-label">Contraseña</label>
            <input type="password" class="form-control" name="password" id="password0" placeholder="contraseña" required>
          </div>
          
          <input type="submit" class="btn btn-success">
        </form>
      </div>
      
      <div class="col col-5 offset-1">
        <!--Fomulario de Registro con Bootstrap-->
        <form id="form-register" action="/register" method="POST" class="px-4 py-3">
          
          <h4>Registra tus datos para acceder</h4>
          <div class="mb-3">
            <label for="name" class="form-label">Nombre</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Xxxx..." required>
          </div>
          
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="email@example.com" required>
          </div>
          
          <div class="mb-3">
            <label for="post" class="form-label">Contraseña</label>
            <input type="password" class="form-control"  id="password" name="password" placeholder="contraseña" required>
          </div>
          
          <div class="mb-3">
            <label for="post" name="clogueado" class="form-label">Contraseña</label>
            <input type="password" class="form-control"  id="password_confirm" name="password_confirm" placeholder="confirma contraseña" required>
          </div>
          
          <input type="submit" class="btn btn-success">
        </form>
      </div>
      
    </div>
  </div>

  
  <script>
    $(document).ready(function () {
      
      // Acá mostramos todos los posibles errores de los formularios
      //toastr.info('probando errores');
      <% for (var error of errors) { %>
        toastr.error('<%=error%>');
      <% } %>
      $('#form-register').on('submit', function(){
        const contrasenia = $('#password').val();
        const confirmacion = $('#password_confirm').val();
        if (contrasenia != confirmacion){
          toastr.error('Las contraseñas no coinciden');
          return false;
        }
      });
      
    });
  </script>
</body>
</html>